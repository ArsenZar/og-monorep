generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  INVITED
  ACTIVE
}

enum RoleName {
  ADMIN
  MANAGER
  WORKER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskEventType {
  STARTED
  PAUSED
  RESUMED
  COMPLETED
}

model Project {
  id          String  @id @default(cuid())
  name        String
  description String?

  organizationId      String
  managerMembershipId String

  organization      Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  managerMembership Membership   @relation("ManagerProjects", fields: [managerMembershipId], references: [id])

  tasks Task[]

  status ProjectStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
  @@index([managerMembershipId])
}

model Task {
  id          String   @id @default(cuid())

  title       String
  description String?

  projectId String
  workerMembershipId String?

  templateId String?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  workerMembership Membership? @relation("WorkerTasks", fields: [workerMembershipId], references: [id])

  template TaskTemplate? @relation(fields: [templateId], references: [id])

  status TaskStatus @default(TODO)

  managerComment String?

  workerReport String?

  startedAt DateTime?
  completedAt DateTime?

  dueDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events TaskEvent[]

  @@index([projectId])
  @@index([workerMembershipId])
  @@index([templateId])
}

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  password String?
  status   UserStatus @default(INVITED)

  memberships Membership[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id             String   @id @default(cuid())
  name           RoleName
  organizationId String

  organization Organization @relation(fields: [organizationId], references: [id])

  memberships Membership[]
  invites     Invite[]

  @@unique([organizationId, name])
}

model Invite {
  id    String @id @default(cuid())
  email String
  token String @unique

  status InviteStatus @default(PENDING)

  organizationId String
  roleId         String

  organization Organization @relation(fields: [organizationId], references: [id])
  role         Role         @relation(fields: [roleId], references: [id])

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model Membership {
  id String @id @default(cuid())

  userId         String
  organizationId String
  roleId         String

  projectsManaged Project[] @relation("ManagerProjects")
  tasksAssigned   Task[]    @relation("WorkerTasks")

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role         Role         @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())

  taskEvents TaskEvent[]

  @@unique([userId, organizationId])
}

model Organization {
  id   String @id @default(cuid())
  name String
  slug String @unique

  roles         Role[]
  memberships   Membership[]
  invites       Invite[]
  taskTemplates TaskTemplate[]

  createdAt DateTime  @default(now())
  projects  Project[]
}

// Task Template

model TaskTemplate {
  id String @id @default(cuid())

  title       String
  description String?

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // lineage
  parentTemplateId String?
  parentTemplate   TaskTemplate?  @relation("TemplateLineage", fields: [parentTemplateId], references: [id])
  derivedTemplates TaskTemplate[] @relation("TemplateLineage")

  createdFromTaskId String?

  tasks Task[]

  createdAt DateTime @default(now())

  @@index([organizationId])
}

model TaskEvent {
  id String @id @default(cuid())

  taskId String
  membershipId String

  type TaskEventType

  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  membership Membership @relation(fields: [membershipId], references: [id])

  @@index([taskId])
}